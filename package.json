{
    "name": "bullish-clash",
    "version": "1.0.0",
    "private": true,
    "description": "Nepal Stock Market Trading Simulator for Live Competitions",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "start": "turbo run start",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "db:generate": "cd apps/api && pnpm db:generate",
        "db:push": "cd apps/api && pnpm db:push",
        "db:migrate": "cd apps/api && pnpm db:migrate",
        "db:seed": "cd apps/api && pnpm db:seed"
    },
    "devDependencies": {
        "turbo": "^2.0.0",
        "typescript": "^5.3.0"
    },
    "packageManager": "pnpm@8.15.0",
    "engines": {
        "node": ">=20.0.0"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}