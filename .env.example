# Environment Variables
# Copy this file to .env and fill in the values

# Database (port 5433 to avoid conflict with local PostgreSQL)
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_NAME=bullish_clash
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5433/bullish_clash

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# API
PORT=4000
CORS_ORIGIN=http://localhost:3000

# Frontend (Next.js public variables)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# Production URLs (update these for deployment)
API_URL=http://localhost:4000
WS_URL=ws://localhost:4000
